{
  "buildCommand": "npx vite build",
  "outputDirectory": "dist/public",
  "framework": null,
  "rewrites": [
    { "source": "/api/trips/featured", "destination": "/api/trips/featured" },
    { "source": "/api/trips/:id", "destination": "/api/trips/[id]" },
    { "source": "/api/trips", "destination": "/api/trips/index" },
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
